				$newcontents .= '</text:p>' . "\n";
				$newcontents .= '</table:table-cell>' . "\n";
				$newcontents .= '</table:table-row>' . "\n";
				$newcontents .= '<table:table-row>' . "\n";
				$process = array_shift($entries);
