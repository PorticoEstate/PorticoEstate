				}
				else
				{
					$newcontents .= 'no data';
				}
			}
			// add extra rows of columns
			//$newcontents .= '</text:p>';
			//$newcontents .= '</table:table-cell>';
			//$newcontents .= '</table:table-row>';
			for($r=1; $r<$rows; $r++)
