{login_form_begin}
<h2>{lang_login}</h2>
<table align="center" width="40%" cellspacing="0" cellpadding="0">
	<tr class="row_on">
		<td>{lang_username}</td>
		<td>{login_form_username}</td>
	</tr>
	
	<tr class="row_off">
		<td>{lang_password}</td>
		<td>{login_form_password}</td>
	</tr>
	
	<tr class="row_on">
		<td>{lang_ftpserver}</td>
		<td>{login_form_ftpserver}</td>
	</tr>
	
	<tr bgcolor="{row_off}">
		<td colspan="2" align="right">{login_form_submit}</td>
	</tr>
</table>
{login_form_end}
